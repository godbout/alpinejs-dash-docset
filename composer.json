{
    "require": {
        "php": "^7.4 || ^8.0",
        "godbout/dash-docset-builder": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "require-dev": {
        "codedungeon/phpunit-result-printer": "^0.30.1",
        "phpunit/phpunit": "^9.5",
        "scrutinizer/ocular": "^1.8"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --color=always",
        "format": "php-cs-fixer fix -vvv --config=.php_cs.dist --ansi"
    }
}
